<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/notifyView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/notifyAlbumArt"
        android:layout_width="80dp"
        android:layout_height="80dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/notifyAlbumArt">
        <TextView
            android:id="@+id/notifyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="17dp"
            android:text="ahahaha"/>
        <RelativeLayout
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/notifyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/notifyPrev"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="50dp"
                    android:src="@drawable/previous"
                    />
                <ImageView
                    android:id="@+id/notifyPlay"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/play"
                    android:visibility="gone"
                    />
                <ImageView
                    android:id="@+id/notifyPause"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/pause"/>
                <ImageView
                    android:id="@+id/notifyNext"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="50dp"
                    android:src="@drawable/next"
                    />

            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>



</RelativeLayout>