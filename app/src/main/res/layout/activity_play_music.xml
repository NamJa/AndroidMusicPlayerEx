<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.ddori.mymusicapp.PlayMusicActivity">

    <RelativeLayout
        android:id="@+id/playMusicRelative"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/albumArtImgView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/musicNameTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/albumArtImgView"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="23dp"
            android:text="음악 이름"/>
        <RelativeLayout
            android:id="@+id/playerControllView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/musicNameTxtView"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <ImageView
                android:id="@+id/previewImgView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/previous"/>
                <ImageView
                    android:id="@+id/playMusicImgView"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/play"/>
                <ImageView
                    android:id="@+id/pauseMusicImgVIew"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/pause"
                    />

                <ImageView
                    android:id="@+id/nextImgView"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/next"/>
            </LinearLayout>
        </RelativeLayout>
        <SeekBar
            android:id="@+id/musicSeekBar"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/playerControllView"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/slash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/musicSeekBar"
            android:layout_centerHorizontal="true"
            android:text="/"
            android:textSize="19dp"/>
        <TextView
            android:id="@+id/musicDurTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/musicSeekBar"
            android:layout_toLeftOf="@id/slash"
            android:textStyle="bold"
            android:textSize="19dp"
            android:textColor="#000000"
            android:text="0:00"/>
        <TextView
            android:id="@+id/musicTotDurTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/musicSeekBar"
            android:layout_toRightOf="@id/slash"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="19dp"
            android:text="3:23"/>
    </RelativeLayout>
</layout>

